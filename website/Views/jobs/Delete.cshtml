@model website.Models.jobs

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<style>
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #222f3e;
        opacity: 0.8;
    }

    li {
        float: left;
    }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

    #nav {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
    }

    li a:hover:not(.active) {
        background-color: #111;
    }

    .active {
        background-color: #10ac84;
    }
    div , dl{
        text-align:center;
    }
    label {
        color: #111;
        font-size: 17px;
    }

    input {
        width: 460px;
        height: 50px;
        font-weight: bold;
        border: solid;
        border-radius: 5px;
        background: #f1f1f1;
    }

    h1, h4 {
        text-align: center;
        display: block;
        font-size: 2.5em;
        font-weight: bold;
    }

    dt {
        display: block;
        font-size: 1.5em;

    }
    #txte {
        text-align:center;
        cursor: not-allowed;
        font-size: 20px;
        border: solid;
        border-radius: 17px;
        background-color: white;
        padding: 10px 20px;
        margin: 5px 400px;
        opacity: 0.6;
    }

    .thumbnail {
        width: 500px;
        height: 300px;
        border-radius: 17px;
    }
    hr {
        border: 1px solid #8B0000;
        margin-bottom: 25px;
    }

    body {
        margin: 0;
        padding: 0;
        background-image: url('../../Uploads/site.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
    }

    a.create {
        text-align: center;
    }

    button {
        background-color: #222f3e;
        color: white;
        padding: 16px 20px;
        text-align: center;
        margin: 8px 6;
        border-radius: 17px;
        border: none;
        width: 100px;
        cursor: pointer;
        opacity: 1;
    }

        button:hover {
            opacity: 0.8;
        }

    a {
        text-align: center;
        text-decoration: none;
        background-color: #222f3e;
        color: white;
    }

    #cre {
        background-color: #222f3e;
        color: white;
        padding: 25px 30px;
        margin: 5px;
        text-align: center;
        border-radius: 17px;
        border: none;
        width: 150px;
        cursor: pointer;
        transition-duration: 0.4s;
        opacity: 1;
    }

        #cre:hover {
            box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
        }
</style>

<h1>Delete</h1>
<hr>
<h1>Are you sure you want to delete this?</h1>

    <div class="dl-horizontal">
        <dl>
        <dt>
            @Html.DisplayNameFor(model => model.category.categoryName)
        </dt>

        <dd id="txte">
            @Html.DisplayFor(model => model.category.categoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.JobName)
        </dt>

        <dd id="txte">
            @Html.DisplayFor(model => model.JobName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.jobdescription)
        </dt>

        <dd id="txte">
            @Html.DisplayFor(model => model.jobdescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Jobphoto)
        </dt>

        <dd>
            <img src="~/Uploads/@Html.DisplayFor(Model=>Model.Jobphoto)"
                 class="thumbnail" />
        </dd>
            </dl>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button id="cre" class="btn btn-default">Delete</button> 
            <br />
            <button id="cre">@Html.ActionLink("Back to List", "Index")</button>
        </div>
    }

