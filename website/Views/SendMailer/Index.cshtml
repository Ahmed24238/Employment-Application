                </td>
                <td>
                    <input id="file" type="file" name="fileUploader" />
                </td>
            </tr>
            <tr>
                <td>
                    Message and Communication methods:
                </td>
                <td>
                    @Html.TextAreaFor(m => m.Body)
                </td>
            </tr>
        </table>
        <input id="send" type="submit" value="Send" />
    }
</fieldset> 
