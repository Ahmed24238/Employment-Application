<div>
<h2>Join us</h2>
<fieldset>
    <legend>
        Send Email
    </legend>
    @using (@Html.BeginForm("Index", "SendMailer", FormMethod.Post, new { @id = "form1", @enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary()

        <table>
            <tr>
                <td>
                    Required department email:
                </td>
                <td>
                    @Html.TextBoxFor(m => m.To)
                </td>
            </tr>
            <tr>
