<style>
    .login {
        width: 400px;
        height: 500px;
        overflow: hidden;
        margin: 60px 0px 0px 400px;
        padding: 80px;
        background: #222f3e;
        border-radius: 15px;
        opacity: 0.8;
    }  
    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #222f3e;
        opacity: 0.8;
    }

    li {
        float: left;
    }

        li a {
            display: block;
            color: white;
