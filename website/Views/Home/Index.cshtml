@model IEnumerable<website.Models.category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron alert alert-info">
    <br>
    <br>
    <h1>Welcome To the future</h1>
    <link href="~/content/Style/home.css" rel="stylesheet" />
</div>
<br>
<hr>

@foreach (var item in Model)
{
    <div class="w3-container">
        <div class="panel-heading"><h1>@Html.DisplayFor(modelItem => item.categoryName)</h1></div>
        <style>
            body {
                background-repeat: no-repeat;
                background-image: url('../../Uploads/site.jpg');
                background-attachment: fixed;
                background-size: 100% 100%;
            }
            .topnavi {
                background-color: #e9e9e9;
                border-radius: 17px;
                margin-block-start: 0.5em;
                margin-block-end: 0.40em;
                margin-inline-start: 7px;
                margin-inline-end: 0px;
            }
            .topnavi input[type=text] {
                padding: 4px 55px;
                border-radius: 17px;
                height: 30px;
                font-weight: normal;
            }
            div{
                text-align:center;
            }
            .w3-container {
                padding-top: 10px;
                padding-right: 250px;
                padding-bottom: 50px;
                padding-left: 250px;
            }
            .w3-card-4 {
                border-radius: 17px;
            }
            img {
                border-radius: 17px;
            }
            
            h1{
                font-weight: bold;
            }
            button {
                background-color: #222f3e;
                color: white;
                padding-top: 10px;
                padding-right: 250px;
                padding-bottom: 50px;
                padding-left: 250px;
                text-align: center;
                border-radius: 17px;
                border: none;
                width: 100px;
                cursor: pointer;
                opacity: 1;
            }

                button:hover {
                    opacity: 0.8;
                }
            a {
                text-align: center;
                text-decoration: none;
                background-color: #222f3e;
                color: white;
            }
            #cre {
                background-color: #222f3e;
                color: white;
                padding: 25px 30px;
                text-align: center;
                border-radius: 17px;
                border: none;
                width: 150px;
                cursor: pointer;
                transition-duration: 0.4s;
                opacity: 1;
            }

                #cre:hover {
                    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
                }
        </style>

        <div class="row panel-body">
            <h5>@Html.DisplayFor(modelItem => item.Description)</h5>

            @foreach (var subItem in item.jobs)
            {
                <div class="w3-card-4">
                    <img src="~/Uploads/@subItem.Jobphoto" alt="Person" style="width:100%" />

                    <h4><b>@Html.DisplayFor(modelItem => subItem.JobName)</b></h4>
                    <p>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subItem.jobdescription).ToString()))</p>
                    <button id="cre"> @Html.ActionLink("Details", "Details", new { JobId = subItem.id }, new { @class = "btn btn-primary" })</button>
                </div>
             }
        </div>
    </div>
    <hr>
 }
