@{
    ViewBag.Title = "Apply";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Apply For The Job</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <style>
        body {
            font-family: Arial;
            background-image: url('../../Uploads/site.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 100%;
        }

        div {
            text-align: center;
        }

        h1 {
            width: 382px;
            height: 300px;
        }

        h2 {
            text-align: center;
        }

        button {
            background-color: #222f3e;
            color: white;
            padding: 16px 20px;
            text-align: center;
            margin: 8px 6;
            border-radius: 17px;
            border: none;
            width: 150px;
            cursor: pointer;
            transition-duration: 0.4s;
            opacity: 1;
        }
            button:hover {
                box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
            }

        input {
            background-color: #222f3e;
            color: white;
            padding: 16px 20px;
            text-align: center;
            margin: 8px 6;
            border-radius: 17px;
            border: none;
            width: 150px;
            cursor: pointer;
            transition-duration: 0.4s;
            opacity: 1;
        }
            input:hover {
                box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
            }

        a {
            text-align: center;
            text-decoration: none;
            background-color: #222f3e;
            color: white;
        }

        .input_field input[type="text"],
        textarea {
            width: 360px;
            height: 250px;
            border: solid;
            border-radius: 5px;
            padding-left: 8px;
            background: #f1f1f1;
        }

        textarea {
            width: 400px;
            height: 250px;
            border: solid;
            border-radius: 5px;
            padding-left: 8px;
            background: #f1f1f1;
        }
    </style>
    <div class="form-horizontal">
        <div>
            @{
                if (ViewBag.Result != null)
                {
                    <h2>@ViewBag.Result</h2>


                }
            }

        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Message", htmlAttributes: new { @class = "control-label col-md-2" })
            <br><br>
            <div class="col-md-10">
                @Html.TextArea("Message", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Message", "", new { @class = "text-danger" })
            </div>
        </div>
        <br>
        <br>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm" class="btn btn-default" />
                <button> @Html.ActionLink("Back to List", "GetJobsByUser")</button>
            </div>
        </div>
    </div>
}